<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:elevation="6dp"
        android:padding="24dp"
        android:layout_margin="8dp"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:layoutDirection="ltr"
        android:theme="@style/Theme.MaterialComponents.Light">

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📊 Kết quả bài làm"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1E1E1E"
            android:layout_gravity="center"
            android:paddingBottom="16dp" />

        <!-- Điểm -->
        <TextView
            android:id="@+id/txtDiem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Điểm: /10"
            android:textSize="20sp"
            android:textColor="#4CAF50"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <!-- Tỷ lệ đúng -->
        <TextView
            android:id="@+id/txtTiLe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tỷ lệ đúng: "
            android:textSize="16sp"
            android:textColor="#555555"
            android:paddingBottom="6dp" />

        <!-- Số câu sai -->
        <TextView
            android:id="@+id/txtCauSai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số câu sai: "
            android:textSize="16sp"
            android:textColor="#F44336"
            android:paddingBottom="6dp" />

        <!-- Số câu chưa chọn -->
        <TextView
            android:id="@+id/txtCauChuaChon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số câu chưa chọn: "
            android:textSize="16sp"
            android:textColor="#FF9800"
            android:paddingBottom="20dp" />

        <!-- Các nút chức năng -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:weightSum="2"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp">

            <Button
                android:id="@+id/btnXemLai"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="🔁 Xem lại"
                android:textAllCaps="false"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#2196F3"
                android:textColor="@android:color/white"
                android:elevation="2dp"
                android:fontFamily="sans-serif-medium" />

            <Button
                android:id="@+id/btnLamDeKhac"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="🎯 Làm đề khác"
                android:textAllCaps="false"
                android:layout_marginStart="8dp"
                android:backgroundTint="#4CAF50"
                android:textColor="@android:color/white"
                android:elevation="2dp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
